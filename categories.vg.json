{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/JunThye0206/Data-Visualisation-2/refs/heads/main/Data/Australia_categories.csv"},
    "vconcat": [{"mark": "area",
    "width": 480, 
    "transform": [
        {
            "fold": [
                "Base Metal","Gold","Iron ore","Mineral sands","Uranium","Coal","Diamonds"
            ],
            "as": ["Category", "Amount"]
        }
    ],
    "encoding": {
      "x": {
        "timeUnit": "yearmonth", "type": "temporal", 
        "field": "Date",
        "axis": {"labelAngle": -45, 
"title": "", "domain": false, "format": "%b %Y", "tickSize": 0},
        "scale": {"domain": {"selection": "brush"}}
      },
      "y": {
        "aggregate": "sum", 
        "field": "Amount", 
        "type": "quantitative", 
        "stack": "center",
        "title": "Expenses (millions)"
      },
      "color": {"field":"Category", "scale": {"domain": [
              "Base Metal", "Gold", "Iron ore",  "Mineral sands", "Uranium", "Coal", "Diamonds"
            ], 
            "range": [
              "#8c510a", "#d8b365", "#f6e8c3", "#f5f5f5", "#c7eae5", "#5ab4ac", 
              "#01665e"
            ]}},
    "tooltip": [
        {"field": "Date", "type": "temporal", "title": "Date"},
        {"field": "Category", "type": "ordinal", "title": "Category"},
        {"field": "Amount", "type": "quantitative", "title": "Amount"}          
        ]
    }}
    ,{
    "width": 480,
    "height": 60,
    "mark": {
        "type": "area",
        "color": "#d8b365"
    },
    "selection": {"brush": {"type": "interval", "encodings": ["x"]}},
    "encoding": {
        "x": {"field": "Date", "type": "temporal","title":"","axis": {"domain": false, "format": "%b %Y", "tickSize": 0,"labelAngle": -45, 
"title": ""}},
        "y": {
        "field": "Total",
        "type": "quantitative",
        "axis": {"tickCount": 3, "grid": false}
        }
    }
    }
]
  }