{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":"State ranking on expenditure",
  "data": {
    "url": "https://raw.githubusercontent.com/JunThye0206/Data-Visualisation-2/refs/heads/main/Data/ranking.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": [
        "New South Wales","Victoria","Queensland","South Australia","Western Australia","Tasmania","Northern Territory"
      ],
      "as": ["Region", "Rank"]
    }
  ],
  "layer": [{"mark": {
        "type": "line"      },
  "width" : 420,
  "height" : 250,
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": "Date",
      "axis": {
                "labelAngle": -45,
                "title": "",
                "domain": false,
                "format": "%b %Y",
                "tickSize": 0
              }
    },
    "y": {
      "field": "Rank",
      "type": "quantitative",
      "scale": {"domain": [7, 1]},
      "axis": {
        "title": "Rank",
        "labelExpr": "'Rank ' + datum.value"
      }
    },
    "color": {
            "field": "Region",
            "legend": {"title": "Australian States"},
            "scale": {
            "domain": [
            "New South Wales","Victoria","Queensland","South Australia","Western Australia","Tasmania","Northern Territory"
          ],
            "range": [
              "#335c67", "#99a88c", "#f0c977", "#e09f3e", "#bf6535", "#9e2a2b","#540b0e"
                ]
            }
          },
    "tooltip": [
    {"field": "Date", "type": "temporal", "title": "Date"},
    {"field": "Region", "type": "nominal", "title": "State"},
    {"field": "Rank", "type": "quantitative", "title": "Rank"}
  ]
  }},
  {"mark": {
    "type": "text",
    "align": "right",
    "baseline": "bottom",
    "dx": 120,
    "dy": -100,
    "fontSize": 11.5,
    "fontStyle": "italic"
    },
      "encoding": {
      "text": {"value": "Western Australia spends the highest expenditure"},
      "color": {"value": "#5A5A5A"}
  }
  },
  {"mark": {
      "type": "text",
      "align": "right",
      "baseline": "bottom",
      "dx": 100,
      "dy": 110,
      "fontSize": 11.5,
      "fontStyle": "italic"
      },
        "encoding": {
        "text": {"value": "Tasmania spends the lowest expenditure"},
        "color": {"value": "#5A5A5A"}
    }
    }],
    "config": {
    "background": "#F7F3E3" 
  }
  
}
