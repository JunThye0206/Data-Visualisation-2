{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/JunThye0206/Data-Visualisation-2/refs/heads/main/Data/ranking.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": [
        "New South Wales","Victoria","Queensland","South Australia","Western Australia","Tasmania","Northern Territory"
      ],
      "as": ["Region", "Rank"]
    }
  ],
  "layer": [{"mark": {
        "type": "line"      },
  "width" : 400,
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": "Date",
      "axis": {
                "labelAngle": -45,
                "title": "",
                "domain": false,
                "format": "%b %Y",
                "tickSize": 0
              }
    },
    "y": {
      "field": "Rank",
      "type": "quantitative",
      "scale": {"domain": [7, 1]},
      "axis": {
        "title": "Rank",
        "labelExpr": "'Rank ' + datum.value"
      }
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "legend": {"title": "Australian States"}
    },
    "tooltip": [
    {"field": "Date", "type": "temporal", "title": "Date"},
    {"field": "Region", "type": "nominal", "title": "State"},
    {"field": "Rank", "type": "quantitative", "title": "Rank"}
  ]
  }},
  {"mark": {
    "type": "text",
    "align": "right",
    "baseline": "bottom",
    "dx": 50,
    "dy": -80,
    "fontSize": 11.5,
    "fontStyle": "italic"
    },
      "encoding": {
      "text": {"value": "Western Australia has the highest expenditure"},
      "color": {"value": "#5A5A5A"}
  }
  },
  {"mark": {
      "type": "text",
      "align": "right",
      "baseline": "bottom",
      "dx": 50,
      "dy": 90,
      "fontSize": 11.5,
      "fontStyle": "italic"
      },
        "encoding": {
        "text": {"value": "Tasmania has the lowest expenditure"},
        "color": {"value": "#5A5A5A"}
    }
    }]
  
}
